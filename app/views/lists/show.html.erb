  <div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=@list.movies.first&.poster_url || "http://everpresent.com/wp-content/uploads/2016/05/IMG_3853.jpg" %>)">
    <h1><%= @list.name.capitalize %></h1>
  </div>
<div class="container">
  <div class="cards">
    <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <%= image_tag movie.poster_url %>
      <div class="card-trip-infos">
        <h2><%= movie.title %> <br> <%= movie.rating %><i class="fa-solid fa-star"></i></h2>
        <h2></h2>
        <p><%= movie.overview %></p>
      </div>
    </div>
      <% end %>
  </div>
