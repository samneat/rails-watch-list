<div class="container mt-3">
  <div class="title-bar d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-3">My Lists</h1>
    <%= link_to "Create New List", new_list_path, class: 'btn btn-primary p-3' %>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do%>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movies.first&.poster_url || "http://everpresent.com/wp-content/uploads/2016/05/IMG_3853.jpg" %>)">
            <%= list.name %>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
